{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/custom-components/*": [
        "./src/common/components/custom/*"
      ],
      "@/components/*": [
        "./src/common/components/*"
      ],
      "@/constants/*": [
        "./src/common/constants/*"
      ],
      "@/*": [
        "./src/*"
      ],
    },
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}